{{!< ../layout}}

<form class="form-signin" role="form" method="post">
<h2 class="form-heading">Sign In</h2>
<hr />
{{#if signup}}
<div class="alert alert-success alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong>Congratulation!</strong> You have successfully Signed up. Please sign in.
</div>
{{/if}}
<div class="form-group{{#if errors.email}} has-error{{/if}}">
  <label for="txtEmail">Email</label>
  <input type="email" name="email" class="form-control" id="txtEmail" placeholder="Email." value="{{email}}" required>
    <span class="help-block">{{#if errors.email}}{{errors.email.msg}}{{/if}}</span>
</div>
<div class="form-group{{#if errors.password}} has-error{{/if}}">
    <label for="txtPassword">Password</label>
    <input type="password" name="password" class="form-control" id="txtPassword" placeholder="Password." maxlength="14" required>
    <span class="help-block">{{#if errors.password}}{{errors.password.msg}}{{/if}}</span>
</div>
<label class="checkbox">
  <input type="checkbox" name="rememberMe" value="Yes" checked=""> Remember me
</label>
<button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>
